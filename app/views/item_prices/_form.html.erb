<%= simple_form_for @item_price, html: { class: 'form-horizontal', multipart: true }, remote: true do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Price</legend>

    <% @item = params[:this_item_id] %>

    <%= f.input :item_id, :as => :hidden, :input_html => {:value => @item} %>

    <%= f.input :price, label: 'New Price', input_html: {class: "avg"} %>

    <%= f.input :category, label: 'Category' %>


    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', item_prices_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>