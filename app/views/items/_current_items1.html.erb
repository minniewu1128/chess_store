<div class="row">

<% unless items.nil? || items.empty? %>


      <% items.each do |item| %>
        <div class="col s6 m6">
          <div class="card horizontal">
            <div class="card-image">
                <% if item.photo_url.nil? %>
                  <%=image_tag("Chess.jpg")%>
                <% else %>
                  <%= image_tag(item.photo_url) %>
                <% end %>
              
            </div>
          
          <div class = "card-stacked">
            <div class="card-content">
              
              <h5 class = 'brown-text'><%= item.name %></h5>

              <p><%= number_to_currency item.current_price %></p>
                
                <%= link_to('Details', item_path(item))%> 
        
            
         

                <%= form_tag add_to_cart_path, :method => 'get', html: { class: 'form-horizontal' },remote:true do %>
                  
                  <%= label_tag "add_to_cart[quantity]", 'Quantity' %>
                  <%= text_field :add_to_cart, :quantity %>

                
          
                <%= hidden_field :add_to_cart, :item_id, value: item.id %> 

                <button class="btn waves-effect waves-light" type="submit" name="action" data-remote='true'>Add to Cart
                  <i class="material-icons right">add_shopping_cart</i>
                </button>

              
                <%end%>

           
          </div>
          </div>
          </div>
        </div>

     

          

  <% end %> 

  <%end %>

  </div>
