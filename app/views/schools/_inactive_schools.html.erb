
<% if @inactive_schools.nil? || @inactive_schools.empty? %>
  <h5> All schools in the system are active currently. </h5>
<% end %>

<% unless @inactive_schools.nil? || @inactive_schools.empty? %>
  <h5 class = 'teal-text text-darken-2'> Inactive Schools </h5>
  <table class="highlight">
    <thead>
      <tr>
        <th width="500">Name</th>
      </tr>
    </thead>
    <tbody>
      <% @inactive_schools.each do |school| %>
        <tr>
          <td><%= link_to school.name, school_path(school) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>