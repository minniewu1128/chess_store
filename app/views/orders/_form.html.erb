<%= simple_form_for @order, html: { class: 'form-horizontal', multipart: true } do |f| %>

    <legend>Checkout</legend>

    <%= f.input :credit_card_number, input_html: {class: "avg"} %>
    <%= f.input :expiration_year %>
    <%= f.input :expiration_month %>
    <%= f.input :school_id, collection: School.all.active.alphabetical.map{|s| [s.name, s.id]}, include_blank: true, input_html: {class: "avg"} %>
    
    <a class="waves-effect waves-light btn" onclick="$('#create-school').show(600)">Add a New School</a>
    
    <div id = "create-school">
        <%= f.input :school_name, label: "Name" %>
        <%= f.input :school_street_1, label: "Street Address Line 1" %>
        <%= f.input :school_street_2, label: "Street Address Line 2" %>
        <%= f.input :school_city, label: "City"%>
        <%= f.input :school_state, label: "State" %>
        <%= f.input :school_zip, label: "Zip" %>
    </div>

    

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', items_path, :class => 'button alert radius' %>
    </div>

<% end %>