<div class = 'row'>
  <div class = 'col s8 left'>
  <blockquote class = "main card-panel">



    <% if logged_in? && (params[:id] == current_user.id.to_s) %>
      <%= render partial: "profile", locals: {user: @user} %>

    <% else %>

      <%= render partial: "account_information", locals: {user: @user} %>

    <% end %>
    
    <% if  current_user.role?(:customer) %>
      <%= render partial: "customer_orders", locals: {user: @user} %>
      <%= link_to 'All Orders', user_all_orders_path(@user) %>
    <% end %>
    



      </div>




        <div class = 'col s4 right'>
        <%= render partial: 'buy_again', locals: {user: @user} %>
      </div>


    </div>

</blockquote>




