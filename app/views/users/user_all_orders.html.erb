<div class = 'row col s12'>
<br/>
<br/>
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a href="#all-orders">All</a></li>
        <li class="tab col s3"><a class="active" href="#unshipped">Unshipped</a></li>
      </ul>
    </div>
  </div>

<div id="all-orders" class="col s12">
  <h2 class = "teal-text text-darken-2"> My Orders</h2>
  <h4 class = 'brown-text'> All </h4>
  <% if @orders.nil? || @orders.empty? %>
    <h5> You have not placed an order yet. </h5>
  <%end%>
  <%= render :partial => 'partials/order_accordion_structure', locals: {orders: @orders} %>
</div>

<div id="unshipped" class="col s12">
  <h2 class = "teal-text text-darken-2">My Orders</h2>
  <h4 class = "brown-text">Unshipped Orders</h4>
  <% if @unshipped.nil? || @unshipped.empty? %>
    <h5> All your orders have shipped! </h5>
  <% else %>
    <%= render :partial => 'partials/order_accordion_structure', locals: {orders: @unshipped} %>
  <%end%>
</div>


        
</div>
