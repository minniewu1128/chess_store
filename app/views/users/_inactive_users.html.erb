<blockquote class = "card-panel side">

<% unless @inactive_users.nil? || @inactive_users.empty? %>
  <h4 class = "brown-text text-darken-2"> Inactive Employees </h4>
  <table class="bordered">
    <thead>
      <tr>
        <th width="100">Username</th>
      </tr>
    </thead>
    <tbody>
      <% @inactive_employees.each do |user| %>
        <tr>
          <td><%= link_to user.username, user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <h5>All users are currently active.</h5>
<% end %>

</blockquote>