<blockquote class = "card-panel main">

<% unless @active_employees.nil? || @active_employees.empty? %>
  <h2 class = "teal-text text-darken-2"> Active Employees </h2>
  <table class="bordered">
    <thead>
      <tr>
        <th width="100">Username</th>
        <th width = "250">Name</th>
        <th> Role </th>
      </tr>
    </thead>
    <tbody>
      <% @active_employees.each do |user| %>
        <tr>
          <td><%= link_to user.username, user_path(user) %></td>
          <td> <%= user.name %> </td>
          <td> <%= user.role %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <h4>There are no active employees in the system at this time.</h4>
<% end %>

 </blockquote>