  <% opt = "#{object.respond_to?(:name) ? object.name : model_name.capitalize }" %>

  <div class="form-actions">
    <%= link_to(eval("#{model_name.pluralize}_path"), class: 'waves-effect waves-light btn') do %>
      &nbsp;All <%= model_name.pluralize.capitalize %>
    <% end %>


    <% if logged_in? && (current_user.role?(:admin) || current_user.role?(:manager))%>
      <%= link_to(eval("edit_#{model_name}_path(object)"), class: 'waves-effect waves-light btn') do %>
        &nbsp;<%= "Edit #{opt}" %>
      <% end %>
    <% end %>

    
    
    <%= link_to(eval("#{model_name}_path(object)"), method: 'delete', data: {confirm: "Are you sure you want to permanently delete #{opt}"}, class: 'waves-effect waves-light btn') do %>
        &nbsp;<%= "Delete #{model_name.capitalize}" %>
    <% end %>
  </div>
